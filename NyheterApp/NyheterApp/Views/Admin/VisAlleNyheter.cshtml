@model IEnumerable<NyheterApp.Models.Nyhet>
 

    @{
        ViewBag.Title = "VisAlleNyheter";
    }

    <h2>Alle nyheter</h2>


    @if (Model != null && Model.Count() > 0)
    {

        foreach (var Nyhets in Model)
        {
            <article class="artikkelOversikt">
                <h3>@Nyhets.Tittel</h3>
                <img src="~/Content/Bilder/@Nyhets.BildeSrc" />
                @Html.ActionLink("Les mer", "VisEnNyhet", new { id = @Nyhets.Id })
            </article>
        }
    }
    else
    {
        <p>Ingen nyhetsartikler er skrevet enda</p>
    }
