@model IEnumerable<NyheterApp.Models.Nyhet>
 

    @{
        ViewBag.Title = "VisAlleNyheter";
    }

    <h2>Alle nyheter</h2>


    @if (Model != null && Model.Count() > 0)
    {

        foreach (var Nyhets in Model)
        {
            //Denne legger en url rundt hele nyhetsartikkelen, slik at den er klikkbar
            <a class="artikkelLink" href="@Url.Action("visEnNyhet", new { id = @Nyhets.Id })">
            <article class="artikkelOversikt" >
                <h3>@Nyhets.Tittel</h3>
                <img class="artikkelbilde" src="~/Content/Bilder/@Nyhets.BildeSrc" />
            </article>
           </a>
        }
    }
    else
    {
        <p>Ingen nyhetsartikler er skrevet enda</p>
    }
