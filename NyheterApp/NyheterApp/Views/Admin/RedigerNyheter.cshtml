@model IEnumerable<NyheterApp.Models.Nyhet>


@{
    ViewBag.Title = "RedigerNyheter";
}

<h2>Rediger nyheter</h2>


@if (Model != null && Model.Count() > 0)
{
    <tr>
        <th> ID </th>
        <th> Tittel </th>
        <th> Tekst </th>
    </tr>
    foreach (var Nyhets in Model)
    {
        <table id="rediger-nyheter-table">
            <tr>
                <td id="nyhets-id">@Nyhets.Id</td>
                <td id="nyhets-tittel">@Nyhets.Tittel</td>
                <td id="nyhets-tekst">@Nyhets.Tekst</td>
                <td id="nyhets-rediger">@Html.ActionLink("Rediger", "RedigerNyhet", new { id = @Nyhets.Id }) <br />
                    @Html.ActionLink("Slett", "SlettNyhet", new { id = @Nyhets.Id }) 
                </td>
            </tr>
        </table>
    }
}
else
{
    <p>Ingen nyhetsartikler funnet</p>
}
